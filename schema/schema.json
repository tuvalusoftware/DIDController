{
    "did_doc_of_user": {
        "type": "object",
        "required": ["controller", "did"],
        "properties": {
            "controller": {
                "type": "string",
                "minLength": 2
            },
            "did": {
                "type": "string",
                "minLength": 2,
                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
            }
        }
    },
    "did_doc_of_wrap_doc": {
        "type": "object",
        "required": ["controller", "did", "owner", "holder", "url"],
        "properties": {
            "controller": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
            },
            "did": {
                "type": "string",
                "minLength": 2,
                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
            },
            "owner": {
                "type": "string",
                "minLength": 2
            },
            "holder": {
                "type": "string",
                "minLength": 2
            },
            "url": {
                "type": "string",
                "minLength": 2
            }
        },
        "additionalProperties": false
    }
}
