{
    "USER_DID_DOC": {
        "type": "object",
        "required": ["controller", "did"],
        "properties": {
            "controller": {
                "type": "string",
                "minLength": 2
            },
            "did": {
                "type": "string",
                "minLength": 2,
                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
            }
        }
    },
    "WRAP_DOC_DID_DOC": {
        "type": "object",
        "required": ["controller", "did", "owner", "holder", "url"],
        "properties": {
            "controller": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
            },
            "did": {
                "type": "string",
                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
            },
            "owner": {
                "type": "string",
                "minLength": 2
            },
            "holder": {
                "type": "string",
                "minLength": 2
            },
            "url": {
                "type": "string",
                "minLength": 2
            },
            "meta_data": {
                "type": "object"
            }
        },
        "additionalProperties": false
    },
    "CREDENTIAL": {
        "type": "object",
        "required": ["issuer", "subject", "credentialSubject", "signature"],
        "properties": {
            "issuer": {
                "type": "string",
                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
            },
            "subject": {
                "type": "string",
                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
            },
            "credentialSubject": {
                "type": "object",
                "required": ["object", "action"],
                "properties": {
                    "object": {
                        "type": "string",
                        "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
                    },
                    "action": {
                        "type": "object",
                        "required": ["code", "value"],
                        "properties": {
                            "code": {
                                "type": "number",
                                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
                            },
                            "value": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "signature": {
                "type": "string",
                "minLength": 5
            }
        }
    },
    "ERROR_OBJECT": {
        "type": "object",
        "required": ["error_code", "error_message"],
        "properties": {
            "error_code": {
                "type": "number"
            },
            "error_message": {
                "type": "string",
                "minLength": 1
            }
        }
    }
}
