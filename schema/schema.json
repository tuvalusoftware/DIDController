{
    "USER_DID_DOC": {
        "type": "object",
        "required": ["controller", "did"],
        "properties": {
            "controller": {
                "type": "string",
                "minLength": 2
            },
            "did": {
                "type": "string",
                "minLength": 2,
                "pattern": "^did:[A-Za-z0-9_]+:[A-Za-z0-9.\\-:_ ]+$"
            },
            "data": {
                "type": "object",
                "additionalProperties": true
            }
        }
    },
    "WRAP_DOC_DID_DOC": {
        "type": "object",
        "required": ["controller", "did", "owner", "holder", "url"],
        "properties": {
            "controller": {
                "type": "array",
                "nullable": true,
                "minItems": 1,
                "items": { "type": "string" }
            },
            "did": {
                "type": "string",
                "pattern": "^did:[A-Za-z0-9_]+:[A-Za-z0-9.\\-:_ ]+$"
            },
            "owner": {
                "type": "string",
                "minLength": 2
            },
            "holder": {
                "type": "string",
                "minLength": 2
            },
            "url": {
                "type": "string",
                "minLength": 2
            },
            "meta_data": {
                "type": "object"
            }
        },
        "additionalProperties": true
    },
    "CREDENTIAL": {
        "type": "object",
        "required": [
            "@context",
            "type",
            "issuer",
            "credentialSubject",
            "proof"
        ],
        "properties": {
            "@context": {
                "type": "array",
                "minItems": 1
            },
            "type": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
            },
            "issuanceDate": {
                "type": "string"
            },
            "expirationDate": {
                "type": "string"
            },
            "credentialSubject": {
                "type": "object",
                "required": ["id"],
                "properties": {
                    "id": {
                        "type": "string"
                    }
                },
                "additionalProperties": true
            },
            "proof": {
                "type": "object",
                "required": [
                    "type",
                    "created",
                    "verificationMethod",
                    "proofPurpose",
                    "proofValue"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "created": {
                        "type": "string"
                    },
                    "verificationMethod": {
                        "type": "string"
                    },
                    "proofPurpose": {
                        "type": "string"
                    },
                    "proofValue": {
                        "type": "string"
                    },
                    "challenge": {
                        "type": "string"
                    },
                    "domain": {
                        "type": "string"
                    },
                    "nonce": {
                        "type": "string"
                    },
                    "jws": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "ERROR_OBJECT": {
        "type": "object",
        "required": ["error_code", "error_message"],
        "properties": {
            "error_code": {
                "type": "number"
            },
            "error_message": {
                "type": "string",
                "minLength": 1
            }
        }
    }
}
