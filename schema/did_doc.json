{
    "did_doc": {
        "type": "object",
        "required": ["controller", "did", "owner", "holder", "url"],
        "properties": {
            "controller": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
            },
            "did": {
                "type": "string",
                "minLength": 2,
                "pattern": "^did:[a-z0-9_]+:[A-Za-z0-9.-:_]+$"
            },
            "owner": {
                "type": "string",
                "minLength": 2
            },
            "holder": {
                "type": "string",
                "minLength": 2
            },
            "url": {
                "type": "string",
                "minLength": 2
            },
            "additionalProperties": false
        }
    }
}
