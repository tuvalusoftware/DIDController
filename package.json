    },
    "homepage": "https://github.com/tuvalusoftware/DIDController#readme",
    "dependencies": {
        "@typegoose/typegoose": "^11.5.0",
        "body-parser": "^1.20.2",
        "child_process": "^1.0.2",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "croner": "^8.0.0",
        "dayjs": "^1.11.10",
        "dotenv": "^16.3.1",
        "envalid": "^7.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.1",
        "method-override": "^3.0.0",
        "mongoose": "^7.5.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "winston": "^3.10.0",
        "zod": "^3.21.4"
    },
